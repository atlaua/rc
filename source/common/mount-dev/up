# devtmpfs is already mounted
if { s6-mkdir /dev/mqueue /dev/pts /dev/shm }
if { s6-mount -t mqueue -o nodev,noexec,nosuid none /dev/mqueue }
if { s6-mount -t devpts -o noexec,nosuid,gid=5,mode=0620,newinstance,ptmxmode=0666 none /dev/pts }
if { s6-mount -t tmpfs -o nodev,noexec,nosuid,mode=1777 none /dev/shm }

if { restorecon -F /dev/pts/ptmx }
if { rm /dev/ptmx }
if { s6-ln -s pts/ptmx /dev/ptmx }

if { s6-ln -s /proc/self/fd /dev/fd }
if { s6-ln -s fd/0 /dev/stdin }
if { s6-ln -s fd/1 /dev/stdout }
if { s6-ln -s fd/2 /dev/stderr }
